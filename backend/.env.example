# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Neon PostgreSQL Database URL
# Formato: postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require
# Obtenha sua URL em: https://console.neon.tech
NEON_DB_URL=postgresql://user:password@ep-example.region.aws.neon.tech/database?sslmode=require

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Secret para assinar tokens JWT (mínimo 32 caracteres)
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=seu_jwt_secret_aqui_minimo_32_caracteres_aleatorios

# Tempo de expiração do token de acesso (em horas)
JWT_EXPIRE_HOURS=24

# Tempo de expiração do refresh token (em dias)
JWT_REFRESH_EXPIRE_DAYS=7

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Porta do servidor
PORT=5000

# Ambiente (development, production)
NODE_ENV=development

# ===========================================
# CORS CONFIGURATION
# ===========================================
# URLs permitidas para fazer requisições ao backend (separadas por vírgula)
# Desenvolvimento: http://localhost:5173
# Produção: adicione a URL do seu frontend na Vercel
CORS_ORIGINS=http://localhost:5173

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Número de rounds para hash de senha (10-12 recomendado)
BCRYPT_ROUNDS=12

# Rate Limiting (aplicado apenas em produção)
# Janela de tempo em milissegundos (15 min = 900000ms)
RATE_LIMIT_WINDOW=900000

# Número máximo de requisições por IP na janela de tempo
RATE_LIMIT_REQUESTS=300

# ===========================================
# EMAIL CONFIGURATION (RESEND)
# ===========================================
# API Key do Resend (obtenha em: https://resend.com/api-keys)
RESEND_API_KEY=re_your_api_key_here

# Email remetente (deve ser verificado no Resend)
EMAIL_FROM=onboarding@resend.dev

# URL do frontend (para links em emails)
# Desenvolvimento: http://localhost:5173
# Produção: https://seu-frontend.vercel.app
FRONTEND_URL=http://localhost:5173

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
# Google OAuth Client ID (Público - vai no frontend e backend)
# Obtenha em: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=sua_client_id_do_google.apps.googleusercontent.com

# Google OAuth Client Secret (Privado - SOMENTE no backend)
# Obtenha na mesma tela do Client ID no Google Console
GOOGLE_CLIENT_SECRET=seu_client_secret_do_google

# Google OAuth Redirect URI (deve estar configurado no Google Cloud Console)
# Desenvolvimento: http://localhost:5000/api/auth/google/callback
# Produção: https://seu-backend.onrender.com/api/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# ===========================================
# SESSION CONFIGURATION
# ===========================================
# Secret para assinar cookies de sessão (usado no OAuth flow)
# Gere um valor aleatório: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=seu_session_secret_aqui_minimo_32_caracteres_aleatorios